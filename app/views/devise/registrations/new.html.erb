<div class="container">
  <div class = "header-title">
    <h1 class= "header-title__main">Member Registration</h1>
    <h5 class= "header-title__sub">会員登録</h5>
  </div>
  <div class = "home-left">
    <h3 class = "text-center">新規登録</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= render "devise/shared/error_messages", resource: resource %>
      <div class="row my-5 mb-3">
        <div class="col-md-11">
          <%= f.text_field :name,class: "form-control", autofocus: true, autocomplete: "name", placeholder: "お名前" %>
        </div>
      </div>

      <div class="row my-5 mb-3">
        <div class="col-md-11">
          <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>
      </div>

      <div class="row my-5 mb-3">
        <div class="col-md-11">
          <%= f.password_field :password,class: "form-control", autofocus: true, autocomplete: "password", placeholder: "パスワード(６文字以上)" %>
        </div>
      </div>

      <div class="row my-5 mb-3">
        <div class="col-md-11">
          <%= f.password_field :password,class: "form-control", autofocus: true, autocomplete: "password", placeholder: "パスワード(確認用)" %>
        </div>
      </div>


      <div class="row mt-5">
        <div class="link-center">
          <%= f.submit "Sign up",class: "button-submit" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class = "home-right">
    <h3 class = "text-center">アカウントをお持ちの方</h3>
    <div class="row mt-5">
      <div class = "link-button-sm-center">
        <h5><%= link_to "ログイン", new_user_session_path %></h5>
      </div>
    </div>
  </div>
</div>