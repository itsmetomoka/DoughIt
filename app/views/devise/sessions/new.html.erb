<div class ="container">
  <div class="row mt-5">
      <h1>Log in</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row my-3">
      <div class="col-md-4 offset-md-2">
        <h5>メールアドレス</h5>
      </div>
      <div class="col-md-4">
        <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
    </div>



    <div class="row my-3">
      <div class="col-md-4 offset-md-2">
        <h5>パスワード</h5>
      </div>
      <div class="col-md-4">
        <%= f.password_field :password,class: "form-control", autocomplete: "current-password" %>
      </div>
    </div>


    

    <div class="row mt-5">
      <div class ="link-center">
        <%= f.submit "Log in",class: "button-submit" %>
      </div>
    </div>
  <% end %>


  <div class="row mt-5">
    <div class = "link-center">
      <h5><%= link_to "登録がお済みではない方はこちら", new_user_registration_path,class:"button-wide"%></h5>
    </div>
  </div>
</div>


