<div class="container">
	<div class="row mt-5 mx-5">
		<h2>編集ページ</h2>
	</div>
	<%= form_for(@user) do |f| %>

		<div class="row my-5 mx-5">
			<div class="col-md-6">
				<div class="row">
					<div class="col-md-4 offset-md-4">
						<div class="profile-image">
		      		<%= attachment_image_tag @user, :profile_image, :fill, 200, 200, id: "img_prev", class: "rounded-circle", fallback: "noimage.png", size:"200x200" %>
		    		</div>
					</div>
				</div>
				<div class="row mt-4">
					<div class="col-md-6 offset-md-3">
						<%= f.attachment_field :profile_image %>
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="row mt-3">
			    <div class="col-md-5 offset-md-1">
			      <p>お名前</p>
			    </div>
			    <div class="col-md-5">
			      <%= f.text_field :name,class: "form-control", autofocus: true, autocomplete: "name" %>
			    </div>
			  </div>
				<div class="row mt-3">
	      	<div class="col-md-5 offset-md-1">
	       		<p>メールアドレス</p>
	      	</div>
		      <div class="col-md-5">
		        <%= f.email_field :email,class: "form-control", autofocus: true, autocomplete: "email" %>
		      </div>
	    	</div>
	    	<div class="row mt-3">
	      	<div class="col-md-5 offset-md-1">
	       		<p>自己紹介</p>
	      	</div>
		      <div class="col-md-5">
		        <%= f.text_area :introduction,class: "form-control", autofocus: true, autocomplete: "introduction" %>
		      </div>
	    	</div>
	  	</div>
		</div>


   
    <!-- 保存/退会ボタン -->
    <div class="row my-5">
      <div class="col-md-2 offset-md-5">
        <%= f.submit "編集内容を保存する",class: "button-submit" %>
      </div>
    </div>

      <!-- 退会ページ作成後ルート直す -->
    <div class="row mt-5">
      <div class="col-md-2 offset-10">
        <%= link_to "退会する", users_check_path, class: "button-submit" %>
      </div>
    </div>

	  <% end %>
	
</div>