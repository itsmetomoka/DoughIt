<div class="container">
	<div class="row mt-5">
		<div class="col-md-2 offset-md-5">
			<div class="underbar">
				<h1>新着教室</h1>
			</div>
		</div>
	</div>
	<div class="row mt-5 mx-5">
		<% @lessons.each do |lesson| %>
			<div class="col-md-3">
				<%= link_to lesson_path(lesson.id) do %>
					<%= attachment_image_tag lesson,:lesson_image, :fill, 250,180, class:"img-fluid" %>
				<% end %>
				<%= lesson.name %>
			</div>
		<% end %>
	</div>
	<div class="row my-5 mx-5">
		<div class="col-md-2 offset-md-5">
			<%= link_to "教室一覧を見る", lessons_path,class: "button" %>
		</div>
	</div>
</div>

