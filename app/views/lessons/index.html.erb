<div class="container">
	<div class="row my-5">
		<div class="col-md-4 offset-md-4">
			<div class="underbar">
				<h2>レッスン一覧</h2>
			</div>
		</div>
	</div>
	<div class="row my-5 mx-5">
		<% @lessons.each do |lesson| %>
			<div class="col-md-3">
				<%= link_to lesson_path(lesson.id) do %>
					<%= image_tag lesson.image.to_s, size: "250x180", class:"img-fluid"%>
				<% end %>
				<%= lesson.name %>
			</div>
		<% end %>
	</div>
	<div class="row mt-5">
		<div class="offset-md-4">
			<%= paginate @lessons %>
		</div>
	</div>
</div>