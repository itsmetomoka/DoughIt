<div class = "container">
	<div class="main-box clearfix">
		<%= render 'layouts/sidebar', categories: @categories %>
		<div class = "main-content">
			<div class="container">
				<div class="row my-5">
					<div class="underbar">
						<% if params[:user_id] %>
							<h2>過去のレッスン</h2>
						<% else %>
							<h2>レッスン一覧</h2>
						<% end %>
					</div>
				</div>
				<div class = "lessons-list">
					<%= render 'list', lessons: @lessons, remote: true %>
				</div>
			</div>
		</div>
	</div>
</div>



